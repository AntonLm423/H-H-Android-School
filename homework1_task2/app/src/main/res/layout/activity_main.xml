<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6EFE7"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="68dp"
    tools:layout_editor_absoluteY="85dp">

    <EditText
        android:id="@+id/editTextСoordinates"
        android:layout_width="212dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="введите координаты"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCall"
        app:layout_constraintVertical_bias="0.176" />

    <Button
        android:id="@+id/buttonOpenMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:onClick="openMap"
        android:text="Открыть карту"
        app:layout_constraintEnd_toEndOf="@+id/editTextСoordinates"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/editTextСoordinates"
        app:layout_constraintTop_toBottomOf="@+id/editTextСoordinates" />

    <Button
        android:id="@+id/buttonCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:onClick="openCallPhone"
        android:text="Позвонить"
        app:layout_constraintEnd_toEndOf="@+id/editTextNumber"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/editTextNumber"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="218dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="введите номер"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonOpenMail"
        app:layout_constraintVertical_bias="0.086" />

    <Button
        android:id="@+id/buttonOpenMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:onClick="openMail"
        android:text="Открыть почту"
        app:layout_constraintEnd_toEndOf="@+id/editTextAddress"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/editTextAddress"
        app:layout_constraintTop_toBottomOf="@+id/editTextAddress" />

    <EditText
        android:id="@+id/editTextAddress"
        android:layout_width="212dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="введите адрес"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonOpenLink"
        app:layout_constraintVertical_bias="0.049" />

    <EditText
        android:id="@+id/editTextLink"
        android:layout_width="212dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="введите ссылку"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.153" />

    <Button
        android:id="@+id/buttonOpenLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:onClick="openBrowser"
        android:text="Открыть ссылку"
        app:layout_constraintEnd_toEndOf="@+id/editTextLink"
        app:layout_constraintStart_toStartOf="@+id/editTextLink"
        app:layout_constraintTop_toBottomOf="@+id/editTextLink" />
</androidx.constraintlayout.widget.ConstraintLayout>